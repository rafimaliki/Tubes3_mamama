<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AvaloniaApplication3.Views.SolverPageView">
    <StackPanel VerticalAlignment="Center">
        <Button Name="ImageInputButton" Width="200" Height="300" HorizontalAlignment="Center">
            <Image Name="ImageDisplay" Stretch="Uniform" HorizontalAlignment="Center"/>
        </Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <RadioButton x:Name="Option1" Content="Option 1" Margin="5"/>
            <RadioButton x:Name="Option2" Content="Option 2" Margin="5"/>
        </StackPanel>
        <Button Name="SearchButton" HorizontalAlignment="Center" Margin="10" Content="Search">
        </Button>
    </StackPanel>
</UserControl>